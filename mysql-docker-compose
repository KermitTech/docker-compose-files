version: '3.8'
services:
  db:
    image: mysql:8.0
    cap_add:
      - SYS_NICE
    restart: always
    environment:
      - MYSQL_DATABASE=my_sql
      - MYSQL_ROOT_PASSWORD=my_sql
    ports:
      - '3306:3306'
    volumes:
      - mysql_db:/var/lib/mysql
      - ./mysql_db/init.sql:/docker-entrypoint-initdb.d/init.sql
volumes:
  mysql_db:
    driver: local
